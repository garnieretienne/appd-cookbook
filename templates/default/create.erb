#!/bin/bash
#
# Create a git repository for a given app name
# This script output a remote git url
set -e

if [ -z "$1" ]; then
  echo "Usage: create APP"
else
  repo_name=$1
  git init --bare --template ~/<%= node[:appd][:git_template] %> ~/${repo_name}.git &> /dev/null
  echo "${USER}@$(hostname --fqdn):${repo_name}.git"
fi